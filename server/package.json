{
  "name": "glsl-playground-server",
  "type": "module",
  "scripts": {
    "format": "biome check --write .",
    "check": "npm run check:lint && npm run check:types",
    "check:lint": "biome check .",
    "check:types": "tsc",
    "test": "bun test",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:drop": "drizzle-kit drop",
    "start": "tsx --watch src/server.ts",
    "build": "tsx build.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.2",
    "@libsql/client": "^0.14.0",
    "bcrypt": "5.1.1",
    "dotenv": "^16.0.2",
    "drizzle-kit": "^0.30.2",
    "drizzle-orm": "^0.38.4",
    "email-validator": "^2.0.4",
    "hono": "^4.6.17",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.27.2",
    "pg": "^8.8.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bcrypt": "5.0.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^22.10.7",
    "@types/obj-file-parser": "^0.5.0",
    "@types/pg": "8.6.5",
    "bun-types": "^1.0.25",
    "esbuild": "^0.24.2",
    "kysely-codegen": "^0.11.0",
    "tsx": "^4.19.2",
    "typescript": "5.7.3"
  }
